          "request": { "method": "GET", "url": "{{holder_base}}/credentials", "description": "Lista todas las credenciales (solo datos, sin estado de revocación)." }
        },
        {
          "name": "List credentials with status",
          "request": { "method": "GET", "url": "{{holder_base}}/credentials-status", "description": "Lista todas las credenciales con su estado de revocación. Cada entrada tiene: id, revoked (true/false/null), credential. null = sin mapeo en VDR." }
        },
        {
          "name": "Check credential status",
          "request": {
            "method": "GET",
            "url": "{{holder_base}}/credential-status/{{credentialId}}",
            "description": "Consulta si una credencial almacenada fue revocada. Requiere el credentialId (ej: urn:uuid:xxx). Retorna { revoked: true/false }."
          }
