    {
      "name": "8. Storage Service (puerto 4002)",
      "item": [
        {
          "name": "Health",
          "request": { "method": "GET", "url": "{{storage_base}}/health" }
        },
        {
          "name": "Save record",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"TestRecord\",\n  \"id\": \"test-1\",\n  \"data\": { \"foo\": \"bar\" }\n}"
